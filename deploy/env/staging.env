# LLM-Forge Staging Environment Configuration

# =============================================================================
# SERVICE IDENTITY
# =============================================================================
SERVICE_NAME=llm-forge
SERVICE_VERSION=1.0.0
PLATFORM_ENV=staging

# =============================================================================
# RUVECTOR SERVICE (Persistence Layer)
# =============================================================================
RUVECTOR_SERVICE_URL=https://ruvector-service-staging.agentics-dev.run.app
RUVECTOR_API_KEY=__RUVECTOR_STAGING_KEY__
RUVECTOR_TIMEOUT_MS=5000
RUVECTOR_RETRY_ATTEMPTS=3

# =============================================================================
# TELEMETRY (LLM-Observatory)
# =============================================================================
TELEMETRY_ENDPOINT=https://llm-observatory-staging.agentics-dev.run.app
TELEMETRY_ENABLED=true
TELEMETRY_SAMPLE_RATE=0.5

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
SDK_GENERATOR_ENABLED=true
SDK_GENERATOR_MAX_LANGUAGES=6
SDK_GENERATOR_TIMEOUT_MS=300000

CLI_GENERATOR_ENABLED=true
CLI_GENERATOR_FRAMEWORK_DEFAULT=commander
CLI_GENERATOR_TIMEOUT_MS=120000

API_TRANSLATOR_ENABLED=true
API_TRANSLATOR_STRICT_MODE=true
API_TRANSLATOR_TIMEOUT_MS=60000

VERSION_COMPAT_ENABLED=true
VERSION_COMPAT_STRICTNESS=standard
VERSION_COMPAT_TIMEOUT_MS=30000

# =============================================================================
# RUNTIME CONFIGURATION
# =============================================================================
NODE_ENV=staging
PORT=8080
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_EMIT_EVENTS=true
FEATURE_DETAILED_LOGS=false
FEATURE_DRY_RUN_DEFAULT=false

# =============================================================================
# CORS & SECURITY
# =============================================================================
CORS_ORIGINS=https://*.agentics-dev.run.app,https://*.agentics.dev
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW_MS=60000
