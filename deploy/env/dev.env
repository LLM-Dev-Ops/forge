# LLM-Forge Development Environment Configuration
#
# ARCHITECTURE RULES:
# - No direct SQL access (use ruvector-service only)
# - All agents share this configuration
# - Stateless execution

# =============================================================================
# SERVICE IDENTITY
# =============================================================================
SERVICE_NAME=llm-forge
SERVICE_VERSION=1.0.0
PLATFORM_ENV=dev

# =============================================================================
# RUVECTOR SERVICE (Persistence Layer)
# =============================================================================
# All persistence goes through ruvector-service - NO direct SQL access
RUVECTOR_SERVICE_URL=https://ruvector-service-dev.agentics-dev.run.app
RUVECTOR_API_KEY=__RUVECTOR_DEV_KEY__
RUVECTOR_TIMEOUT_MS=5000
RUVECTOR_RETRY_ATTEMPTS=3

# =============================================================================
# TELEMETRY (LLM-Observatory)
# =============================================================================
TELEMETRY_ENDPOINT=https://llm-observatory-dev.agentics-dev.run.app
TELEMETRY_ENABLED=true
TELEMETRY_SAMPLE_RATE=1.0

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# SDK Generator Agent
SDK_GENERATOR_ENABLED=true
SDK_GENERATOR_MAX_LANGUAGES=6
SDK_GENERATOR_TIMEOUT_MS=300000

# CLI Command Generator Agent
CLI_GENERATOR_ENABLED=true
CLI_GENERATOR_FRAMEWORK_DEFAULT=commander
CLI_GENERATOR_TIMEOUT_MS=120000

# API Translation Agent
API_TRANSLATOR_ENABLED=true
API_TRANSLATOR_STRICT_MODE=false
API_TRANSLATOR_TIMEOUT_MS=60000

# Version Compatibility Agent
VERSION_COMPAT_ENABLED=true
VERSION_COMPAT_STRICTNESS=standard
VERSION_COMPAT_TIMEOUT_MS=30000

# =============================================================================
# RUNTIME CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=8080
LOG_LEVEL=debug
LOG_FORMAT=json

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_EMIT_EVENTS=true
FEATURE_DETAILED_LOGS=true
FEATURE_DRY_RUN_DEFAULT=false

# =============================================================================
# CORS & SECURITY
# =============================================================================
CORS_ORIGINS=*
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000
