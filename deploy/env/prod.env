# LLM-Forge Production Environment Configuration
#
# CRITICAL: Production settings - handle with care

# =============================================================================
# SERVICE IDENTITY
# =============================================================================
SERVICE_NAME=llm-forge
SERVICE_VERSION=1.0.0
PLATFORM_ENV=prod

# =============================================================================
# RUVECTOR SERVICE (Persistence Layer)
# =============================================================================
RUVECTOR_SERVICE_URL=https://ruvector-service.agentics.app
RUVECTOR_API_KEY=__RUVECTOR_PROD_KEY__
RUVECTOR_TIMEOUT_MS=3000
RUVECTOR_RETRY_ATTEMPTS=5

# =============================================================================
# TELEMETRY (LLM-Observatory)
# =============================================================================
TELEMETRY_ENDPOINT=https://llm-observatory.agentics.app
TELEMETRY_ENABLED=true
TELEMETRY_SAMPLE_RATE=0.1

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
SDK_GENERATOR_ENABLED=true
SDK_GENERATOR_MAX_LANGUAGES=6
SDK_GENERATOR_TIMEOUT_MS=300000

CLI_GENERATOR_ENABLED=true
CLI_GENERATOR_FRAMEWORK_DEFAULT=commander
CLI_GENERATOR_TIMEOUT_MS=120000

API_TRANSLATOR_ENABLED=true
API_TRANSLATOR_STRICT_MODE=true
API_TRANSLATOR_TIMEOUT_MS=60000

VERSION_COMPAT_ENABLED=true
VERSION_COMPAT_STRICTNESS=strict
VERSION_COMPAT_TIMEOUT_MS=30000

# =============================================================================
# RUNTIME CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=8080
LOG_LEVEL=warn
LOG_FORMAT=json

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_EMIT_EVENTS=true
FEATURE_DETAILED_LOGS=false
FEATURE_DRY_RUN_DEFAULT=false

# =============================================================================
# CORS & SECURITY
# =============================================================================
CORS_ORIGINS=https://*.agentics.app
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
